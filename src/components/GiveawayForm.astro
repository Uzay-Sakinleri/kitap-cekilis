---
import "../css/index.css";
const { choices } = Astro.props;
---

<div class="container">
  <form method="post" enctype="multipart/form-data">
    <div class="input">
      <div class="text-1">Katılımcılar</div>
      <slot />
      <section class="choice-sec">
        {
              <select name="roll-method" id={`roll-method`} > 

                {choices.map((choice: string) => (
                      <option value={choice}  id={`roll-method-${choice}`}>{choice}</option>
                ))}
                 
                </select>
      
        }
      </section>
      <button class="roll" type="submit">ROLL</button>
    </div>
  </form>
</div>
